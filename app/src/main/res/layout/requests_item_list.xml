<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/backgroundcolor"
    android:orientation="horizontal"
    android:padding="0dp">


    <TextView
        android:id="@+id/tw_numeServiciu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_view_produs"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/image_view_produs"
        android:gravity="center"
        android:text="Reparatie frigider"
        android:textColor="@color/blue_black"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/tw_status"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tw_etc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_view_produs"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/image_view_produs"
        android:gravity="center"
        android:text="..."
        android:textColor="@color/blue_black"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/tw_dataTrimiterii"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tw_numeServiciu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tw_nrServicii"
        android:layout_width="16dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/image_view_produs"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/image_view_produs"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/blue_black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tw_numeServiciu"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tw_serviciiSolicitate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_view_produs"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/image_view_produs"
        android:gravity="center"
        android:text=" servicii solicitate"
        android:textColor="@color/blue_black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tw_status"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tw_nrServicii"
        app:layout_constraintTop_toBottomOf="@+id/tw_numeServiciu"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tw_dataTrimiterii"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="32dp"
        android:text="azi"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/blue_black"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/tw_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tw_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:text="trimisa spre confirmare"
        android:textColor="@color/sunglow"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>


